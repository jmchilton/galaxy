<tool id="gx_conditional_boolean_optional" name="gx_conditional_boolean_optional" version="1.0.0">
    <command><![CDATA[
echo 'test: $conditional_parameter.test_parameter' >> '$output';
cat '$inputs' >> $inputs_json;
    ]]></command>
    <configfiles>
        <inputs name="inputs" filename="inputs.json" />
    </configfiles>
    <inputs>
        <conditional name="conditional_parameter">
            <param name="test_parameter" type="boolean" optional="true" />
            <when value="true">
                <param name="integer_parameter" type="integer" value="1" />
            </when>
            <when value="false">
                <param name="boolean_parameter" type="boolean" />
            </when>
        </conditional>
    </inputs>
    <outputs>
        <data name="output" format="txt" />
        <data name="inputs_json" format="json" />
    </outputs>
    <tests>
        <test>
            <output name="output">
                <assert_contents>
                    <has_line line="test: false" />
                </assert_contents>
            </output>
            <output name="inputs_json">
                <assert_contents>
                    <has_text text="&quot;test_parameter&quot;: false" />
                </assert_contents>
            </output>
        </test>
        <test>
            <conditional name="conditional_parameter">
                <param name="test_parameter" value_json="null" />
            </conditional>
            <output name="output">
                <assert_contents>
                    <has_line line="test: false" />
                </assert_contents>
            </output>
            <!-- When it is a conditional test parameter - it doesn't serialize as null. -->
            <output name="inputs_json">
                <assert_contents>
                    <has_text text="&quot;test_parameter&quot;: false" />
                </assert_contents>
            </output>
        </test>
        <test>
            <conditional name="conditional_parameter">
                <param name="test_parameter" value="true" />
            </conditional>
            <output name="output">
                <assert_contents>
                    <has_line line="test: true" />
                </assert_contents>
            </output>
            <output name="inputs_json">
                <assert_contents>
                    <has_text text="&quot;test_parameter&quot;: true" />
                </assert_contents>
            </output>
        </test>
        <test>
            <conditional name="conditional_parameter">
                <param name="test_parameter" value_json="false" />
            </conditional>
            <output name="output">
                <assert_contents>
                    <has_line line="test: false" />
                </assert_contents>
            </output>
        </test>
        <test>
            <conditional name="conditional_parameter">
                <param name="test_parameter" value_json="true" />
            </conditional>
            <output name="output">
                <assert_contents>
                    <has_line line="test: true" />
                </assert_contents>
            </output>
        </test>
    </tests>
</tool>
