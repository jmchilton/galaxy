{
    "compilerOptions": {
        "target": "es2016",
        "jsx": "preserve",
        "module": "es2015",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "allowJs": true,
        "checkJs": false,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["types/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}
